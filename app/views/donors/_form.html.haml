= form_for @donor do |f|
  - if @donor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@donor.errors.count, "error")} prohibited this donor from being saved:"
      %ul
        - @donor.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
